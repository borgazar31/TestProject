    <link href="~/css/signin.css" rel="stylesheet">
</head>
<body class="text-center">
    <main class="form-signin">
        <form method="post" asp-page="index">
            <h1 class="h3 mb-3 fw-normal">Авторизация</h1>
            <div class="form-floating">
                <input type="email" class="form-control" asp-for="@Model.user.Email" name="email" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" asp-for="@Model.user.Password" name="password" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
            <hr>
            <a href='@Url.Page("Users/Registr")' class="w-100 btn btn-lg btn-primary">Регистрация</a>

        </form>
